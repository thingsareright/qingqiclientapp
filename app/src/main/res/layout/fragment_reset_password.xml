<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qingqiclient.fragment.ResetPasswordFragment">

    <ImageView
        android:id="@+id/qingqiicon"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginTop="80sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/qingqiicon"/>

    <TextView
        android:id="@+id/motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="20sp"
        android:text="欢迎使用轻骑快送"
        android:layout_below="@id/qingqiicon"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_below="@id/tel"
        android:layout_centerHorizontal="true"
        android:hint="请输入手机号" >
    </EditText>

    <EditText
        android:id="@+id/old_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_below="@id/tel"
        android:layout_centerHorizontal="true"
        android:hint="请输入原密码" >
    </EditText>

    <EditText
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_below="@id/tel"
        android:layout_centerHorizontal="true"
        android:hint="请输入新密码" >
    </EditText>

    <EditText
        android:id="@+id/new_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_below="@id/tel"
        android:layout_centerHorizontal="true"
        android:hint="请确认新密码" >
    </EditText>

    <Button
        android:id="@+id/submmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"/>
</LinearLayout>
